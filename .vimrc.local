autocmd BufNewFile,BufRead *.txt call ReStructuredText()
autocmd BufNewFile,BufRead *.rst call ReStructuredText()

function! Markdown()
  " markdown bold and italic
  let @b = "ysiw*lysiw*"
  let @i = "ysiw*"
  let @t = "ysiw`"
  nmap <leader>b ysiw*lysiw*
  nmap <leader>i ysiw*
  nmap <leader>t ysiw`
  vnoremap <leader>b ysiw*lysiw*
  vnoremap <leader>i ysiw*
  vnoremap <leader>t ysiw`
endfunction

function! ReStructuredText()
  "Make underlines for headings in reStructuredText format
  let @b = "ysiw*lysiw*"
  let @i = "ysiw*"
  let @t = "ysiw`lysiw`"
  let @y = "yypv$r=j"
  let @u = "yypv$r-j"
  let @i = "yypv$r^j"
  let @o = "yypv$r~j"
  set filetype=rst
  nnoremap <leader>v :update<cr>:silent !rst2html.py '%' > %:r.html && open %:r.html<cr>
  "nnoremap <leader>p :update<cr>:!rst2pdf -s letter,friendly,margins,baskerville '%' && open %:r.pdf<cr>
  if has("gui_macvim")
    nnoremap <leader>p :update<cr>:silent !cat '%' \| gsed -nr -f ~/.rst2pdf/fb.sed \| rst2pdf > %:r.pdf && open %:r.pdf<cr>
  else
    nnoremap <leader>p :update<cr>:silent !cat '%' \| sed -nr -f ~/.rst2pdf/fb.sed \| rst2pdf > %:r.pdf && open %:r.pdf<cr>
  endif
endfunction

function! Asciidoc()
  nnoremap <leader>v :update<cr>:!asciidoc -b html5 -a icons -a toc2 -a theme=flask '%'<cr>
endfunction

