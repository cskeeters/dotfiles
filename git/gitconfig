	gluaf = log --graph --pretty=format:'%C(green)%>|(15)%h%C(reset) %C(bold italic)%s%C(reset) %C(blue)%an%C(reset) %C(magenta)%D%C(reset) %C(dim)%>|(-1)%ah%C(reset)' --all
	gls   = log --graph --pretty=format:'%C(cyan)%>|(8)%G?%C(reset) %C(green)%h%C(reset) %C(bold italic)%s%C(reset) %C(blue)%an%C(reset) %C(magenta)%D%C(reset) %C(dim)%ah%C(reset)'
