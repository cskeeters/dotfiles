[alias]
	s   = status
	st  = status
	sta = status
	re  = remote -v

	sw  = switch

	; g: Graph
	; l: long
	; s: show Signed commits
	; u: authors (Users)
	; a: All branches (Should be last)
	; f: format to width of the terminal
	; COLORING
	; branches/tags: magenta (to match shell prompt)
	; hash: green (to match lazygit)
	; USED PLACEHOLDERS
	; %h   Hash
	; %s   Subject
	; %an  Author's Name
	; %ah  Commit Date (Author Human)  (OLD: git log --date=human --pretty=format:"%ad" or %as)
	; %D   Ref names without the " (", ")" wrapping.
	; %n   New Line
	; %w(0, 8, 8) Indent all lines
	l    = log         --pretty=format:'%C(green)%h%C(reset) %C(bold italic)%s%C(reset) %C(magenta)%D%C(reset) %C(dim)%ah%C(reset)'
	lf   = log         --pretty=format:'%C(green)%h%C(reset) %C(bold italic)%s%C(reset) %C(magenta)%D%C(reset) %C(dim)%>|(-1)%ah%C(reset)'
	ls   = log         --pretty=format:'%C(green)%h%C(reset) %C(bold italic)%s%C(reset) %C(magenta)%D%C(reset) %C(dim)%ah%C(reset)%n        %C(cyan)%G? %C(blue)%GS %C(cyan)%GK%C(reset)%n' --all
	lsf  = log         --pretty=format:'%C(green)%h%C(reset) %C(bold italic)%s%C(reset) %C(magenta)%D%C(reset) %C(dim)%>|(-1)%ah%C(reset)%n        %C(cyan)%G? %C(blue)%GS %C(cyan)%GK%C(reset)%n' --all
	ll   = log         --pretty=format:'%C(green)%h%C(reset) %C(blue)%an%C(reset) %C(magenta)%D%C(reset) %C(dim)%ah%C(reset)%n%w(0, 8, 8)%B' --all
	llf  = log         --pretty=format:'%C(green)%h%C(reset) %C(blue)%an%C(reset) %C(magenta)%D%C(reset) %C(dim)%>|(-1)%ah%C(reset)%n%w(0, 8, 8)%B' --all

	; Width for hash leaves room for graph       +++++++
