# vim: filetype=neomuttrc

## MAIN

set abort_key = "<Esc>"  # Needs: export ESCDELAY=50

unset help        # No help bar at the top of index
unset resolve     # Don't move to the next message

set quit                 # don't ask when quiting
set timeout = 0          # Ok to block since we don't keep IMAP connections alive

unset sidebar_visible

set thorough_search      # strip headers and decode before searching


## DIRS

# set tmp_dir = ~/Programs/neomutt/temp # where to keep temp files
# set mailcap_path = ~/.config/neomutt/mailcap
# set header_cache = "~/.cache/neomutt/headers"        # Not used by vfolders
# set message_cache_dir = "~/.cache/neomutt/messages"  # Not used without IMAP connectivity with neomutt


## Maildir

set beep_new             # bell on new mails
unset mark_old           # read/new is good enough for me
unset confirm_append     # don't ask when appending messages to an existing mailbox (s/save-message)

# status bar, date format, finding stuff etc.
set status_chars = " *%A"
set status_format = "[ Folder: %f Limit: %V ] [%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]%>─%?p?( %p postponed )?"


## INDEX

set arrow_cursor = no   # Arrow or color indicator for cursor
set arrow_string = "➜"

set delete = yes        # Automatically delete messages marked 'D' when closing a mailbox

set use_threads = yes                       # Must be above sort to avoid warning
set sort = threads
set sort = reverse-last-date-received   # This puts the newest thread at the top
# set sort_aux = last-date-received       # This keeps replies in order inside the thread
set sort_aux = reverse-last-date-received

### Treading

set reply_regex = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"
set uncollapse_jump # Jump to the next unread if uncollapsed thread
# set sort_re


## PAGER

alternative_order text/plain text/html text/enriched text/*
auto_view text/html text/calendar application/ics               # view html automatically
set mailcap_path = /Users/chad/.mailcap
set mailcap_sanitize = yes

unset markers             # Show wrapped lines with +
set smart_wrap          # wrap at word boundaries
set quote_regex = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"         # Hide quoted text with <toggle-quoted>

### Index Window in Pager
set pager_index_lines = 10  # Shows 10 lines of index when pager is active
set pager_context = 3
set pager_stop
set menu_scroll
set tilde


## COMPOSE

set postpone = ask-yes   # Optional: Stops asking "Postpone message?" when exiting a draft
set compose_confirm_detach_first = no # Don't ask, ready to remove Markdown

## SYSTEM

set wait_key = no        # Ask for keypress after external command
set pipe_decode = no     # neomutt-tag/neomutt-rm requires no (pipe raw with Message-ID)

## CONTACTS

set query_command="khard email --parsable --search-in-source-files '%s'"
bind editor <Tab> complete-query

## EDITING

set send_charset = "utf-8:iso-8859-1:us-ascii"
set charset = "utf-8"

set editor = "nvim"
set edit_headers                     # show headers when composing
set auto_edit                        # Don't ask for To, Cc, and Subject
unset ask_cc                         # ask for CC:
set fast_reply                       # skip to compose when replying

unset sig_dashes                     # no dashes before sig
set sig_on_top                       # Above quoted text
unset signature                      # Set in account

# set text_flowed                    # trailing space allow wrapping and maxwidth


## REPLY/FORWARD

unset reply_to                         # reply to "Reply-to" field instead of From
set include                          # include message in replies
# set reverse_name                   # reply as whomever it was to (handles Maildir moves)

set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set forward_quote                    # include message in forwards
set mime_forward = ask-no            # forward attachments as part of body
unset mime_forward_decode
set mime_forward_rest                # foward mime parts that can't be decoded

set attribution_intro = "On %d, %n wrote:\n" # format of quoting header, Add newline so that quoted text can be processed as markdown

## SENDING

set fcc_attach                       # save attachments with the body

## IMAP

# set imap_check_subscribed
