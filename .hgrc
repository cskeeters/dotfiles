[ui]
username=chad.skeeters@gmail.com

[merge-tools]
meld.priority = 1
meld.premerge = False
meld.args = $local $other $base 

[merge-patterns]
** = meld

[extensions]
hgext.mq=
hgk=
graphlog=
color=
pager=
record=

[hgk]
#path=/usr/local/bin/hgk
path=/opt/local/share/mercurial/contrib/hgk

[diff]
git=1

[defaults]
revert=--no-backup

[alias]
slog = log --style=/Users/chad/mercurial-cli-templates/map-cmdline.slog
nlog = log --style=/Users/chad/mercurial-cli-templates/map-cmdline.nlog
sglog = glog --style=/Users/chad/mercurial-cli-templates/map-cmdline.sglog
, = sglog -l15

[pager]
pager = LESS='FRX' less
