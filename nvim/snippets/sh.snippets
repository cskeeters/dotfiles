snippet yaml_yq YAML processing with yq
	IFS='' read -r -d '' YAML <<EOF
	- name: Aerosmith
	albumns:
		- name: Aerosmith
		year: 1973
		- name: Toys In The Attic
		year: 1975
		- name: Rocks
		year: 1976
		- name: Get a Grip
		year: 1993
	EOF

	while IFS=$'\t' read -r ARTIST ALBUMN YEAR; do
		echo "Artist: $ARTIST"
		echo "Albumn: $ALBUMN"
		echo "YEAR: $YEAR"
		echo
	done < <(yq -r '.[] | .name as $ARTIST_NAME | .albumns[] | "\($ARTIST_NAME)\t\(.name)\t\(.year)"' <(echo "$YAML"))


