#### Title page
snippet today Set date to the today
	\date{\today}

snippet thanks A footnote without a number
	\thanks{To your mother}


#### Setup

snippet setup-hyperref Add hyperref package
	\usepackage[
		plainpages=false,
		pdfpagelabels,
		pdftitle={\mytitle},
		pagebackref,
		pdfauthor={\myauthor},
		pdfkeywords={\mykeywords}
		]{hyperref}

	% No colored borders on links
	\hypersetup{pdfborder=0 0 0}

snippet noindent Disable paragraph indenting
	\setlength\parindent{0pt}

snippet setup-glossary Template for DoD-style glossaries
	\usepackage[nopostdot,nonumberlist,nogroupskip,acronym,toc]{glossaries}
	% style=indexgroup
	\makenoidxglossaries

	\newacronym{HTML}{HTML}{Hyper-Text Markup Language}

	% Output Glossaries (each type will have a heading
	% \printglossaries[type=\acronymtype]
	\printnoidxglossaries

#### Setup/Fonts

snippet setup-font-ncm Configures New Computer Modern Font
	\usepackage[regular]{newcomputermodern}

snippet setup-font-mlmodern Configures Medium Latin Modern (MLModern) Font
	\usepackage{mlmodern}

snippet setup-font-libertine Configures Linux Libertine Font
	% tlmgr install libertine
	\usepackage{libertine}

snippet setup-font-libertinus Configures Linux Libertinus Font
	\usepackage{libertinus}
	%% Package Options
	% oldstyle, osf      old-style figures
	% lining, nf, lf     lining figures (default)
	% proportional, p    varying-width figures
	% tabular, t         fixed-width figures (default)
	% semibold, sb       semibold version
	% bold               bold version (default)

	% ScaleRM            scaling for the serif font, preset to 1
	% ScaleSF            scaling for the sans serif font, preset to 1
	% ScaleTT            scaling for the mono font, preset to MatchLowercase
	% StretchTT          value (0..1) for the mono font stretch (FakeStretch)

	% defaultfeatures    valid only for \rmfamily and \sffamily
	% uni                argument is passed to unicode-math
	% mathfeature        argument is passed to \setmath font
	% greek              set some greek letters for directly use
	% nomath             Do not load package unicode-math and no math font setting
	% greekitalic        Set some greek italic letters for directly use in the input

	\usepackage[T1]{fontenc}


	% Use Semi-Bold
	\LibertinusSerifSB

	% Use Semi-Bold
	\bfseries SemiBold 0123456}
	% Serif +onum
	\LibertinusSerifOsF normal weight 0123456
	% Sans-Serif +onum
	\LibertinusSansOsF normal weight 0123456

snippet setup-custom-font Specifies custom font to use
	\usepackage{fontspec}
	\setmainfont[Path=/Users/username/Downloads/]{SpecialFont.ttf}

