snippet format-heading Formats Headings
	// Simpler
	//#show heading.where(level:1): it => block(
	//  above:1.3em,
	//  below:.8em,
	//  {
	//    //set text(size: 18pt)
	//    if (it.numbering != none) {
	//      counter(heading).display()
	//      h(6pt)
	//    }
	//    smallcaps(it.body)
	//  }
	//)

	#show heading: it => {
		// Defaults
		let above = 1em
		let below = .7em
		let style = "normal"

		if (it.level == 1) {
			above = 1.3em
			below = .8em
		} else if (it.level == 2) {
			above = 1.3em
			below = .8em
			style = "italic"
		}

		set text(style:style)

		block(
			above: above, below: below,
			{
				it
			}
		)
	}

