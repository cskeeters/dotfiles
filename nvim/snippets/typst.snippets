snippet toc Table of Contents


	// This allows for outline formatting without the outrageous package
	// set outline.entry(fill: repeat([.~~])) // Optional
	// set outline.entry(fill: repeat([\_]))  // Optional
	#show outline.entry: it => link(
		it.element.location(),

		if (it.level == 1) {
			v(4pt)
			// it.indented(it.prefix(), text(rcc_red, weight:700, it.inner()))
			it.indented(it.prefix(), text(black, weight:700, it.inner()))
		} else {
			it.indented(it.prefix(), it.inner())
		}
	)

	// Use outrageous
	#import "@preview/outrageous:0.1.0"

	#show outline.entry: outrageous.show-entry.with(
		// the typst preset retains the normal Typst appearance
		..outrageous.presets.typst,
		// we only override a few things:
		// level-1 entries are italic, all others keep their font style
		font-weight: (900, 400),
		// no fill for level-1 entries, a thin gray line for all deeper levels
		fill: (repeat[~~.], repeat[~~.], repeat[~~.]),
		// Has to be none due to issue #1 https://github.com/RubixDev/typst-outrageous/issues/1
		vspace: (1.2em, none),
	)


	#outline(title: "Table of Contents", indent:auto)

	// Or keep the heading separate
	#heading("Table of Contents", outlined: false, bookmarked:true)
	#outline(title: none, indent:auto)

